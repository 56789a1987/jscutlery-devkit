{
  "name": "cypress-mount",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/cypress-mount/src",
  "projectType": "library",
  "generators": {},
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["packages/cypress-mount/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "options": {
        "jestConfig": "packages/cypress-mount/jest.config.ts",
        "passWithNoTests": true
      },
      "outputs": ["{workspaceRoot}/coverage/packages/cypress-mount"]
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "options": {
        "outputPath": "dist/packages/cypress-mount",
        "tsConfig": "packages/cypress-mount/tsconfig.lib.json",
        "packageJson": "packages/cypress-mount/package.json",
        "main": "packages/cypress-mount/src/index.ts",
        "assets": ["LICENSE", "packages/cypress-mount/*.md"]
      },
      "outputs": ["{options.outputPath}"]
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "postTargets": [
          "cypress-mount:build",
          "cypress-mount:npm",
          "cypress-mount:github"
        ],
        "commitMessageFormat": "release(${projectName}): ðŸŽ¸ cut release to ${version}",
        "noVerify": true,
        "push": true
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "notes": "${notes}",
        "tag": "${tag}"
      }
    },
    "npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    }
  },
  "tags": []
}

{
  "name": "rx-computed",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/rx-computed/src",
  "prefix": "jscutlery",
  "tags": [],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "packages/rx-computed/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/rx-computed/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/rx-computed/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/rx-computed/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "postTargets": [
          "rx-computed:build",
          "rx-computed:npm",
          "rx-computed:github"
        ],
        "commitMessageFormat": "release({projectName}): ðŸŽ¸ cut release to {version}",
        "noVerify": true,
        "push": true
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "notes": "{notes}",
        "tag": "{tag}"
      }
    },
    "npm": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    }
  }
}
